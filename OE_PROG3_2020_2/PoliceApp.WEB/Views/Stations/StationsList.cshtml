@model IEnumerable<PoliceApp.WEB.Models.Station>

<h2>StationsList</h2>

@if (Model.Count() == 0)
{
    <p>No data in the database!</p>
}
else
{
    <table border="1">
        <tr>
            <th>@Html.DisplayNameFor(m => m.First().StationName)</th>
            <th>Datasheet</th>
            <th>Delete</th>
            <th>Modify</th>
        </tr>
        @foreach (var station in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => station.StationName)</td>
                <td>@Html.ActionLink("[SHOW]", "Details", new { id = station.StationId })</td>
                <td>@Html.ActionLink("[DEL]", "Remove", new { id = station.StationId })</td>
                <td>@Html.ActionLink("[EDIT]", "Edit", new { id = station.StationId })</td>
            </tr>
        }
    </table>

}